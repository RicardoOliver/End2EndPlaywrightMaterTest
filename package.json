{
  "name": "playwright-test-framework",
  "version": "1.0.1",
  "description": "Framework completo de testes E2E com Playwright para Automation In Testing",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report reports/html",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    
    "test:smoke": "npx playwright test tests/smoke",
    "test:api": "npx playwright test tests/api",
    
    "test:fast": "set FAST=true&& npx playwright test",
    "test:parallel": "npx playwright test --workers=4",
    "test:serial": "npx playwright test --workers=1",
    "codegen": "npx playwright codegen https://automationintesting.online/#/",
    "install:browsers": "npx playwright install",
    "notify": "node --loader ts-node/esm scripts/sendAllNotifications.ts",
    "report:allure": "npx -y allure-commandline@2.13.9 generate allure-results -o reports/allure --clean",
    "report:allure:open": "node -e \"const {exec}=require('child_process'); const cmd=process.platform==='win32' ? 'start \\" + 'reports\\/allure\\/index.html' + "\\" : 'xdg-open reports/allure/index.html'; exec(cmd)\"",
    "perf:k6": "docker compose run --rm k6"
  },
  "dependencies": {
    "@slack/web-api": "latest",
    "dotenv": "^16.4.5",
    "nodemailer": "^6.9.15",
    "archiver": "^6.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^22",
    "@types/nodemailer": "^6.4.16",
    "typescript": "^5",
    "allure-playwright": "^2.0.0",
    "allure-commandline": "^2.18.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}